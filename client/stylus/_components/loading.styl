@import 'nib'

#loading
	
	.spinner
		position    : absolute
		top         : 50%
		left        : 50%
		width       : 70px
		margin-left : -35px
		margin-top  : -9px
		
		&.loaded
			opacity: 0
		
		& > div
			width            : 18px
			height           : 18px
			background-color : #111
			border-radius    : 100%
			display          : inline-block
			
			animation           : bouncedelay 1.4s infinite ease-in-out
			animation-fill-mode : both
		
		.bounce1
			animation-delay: -0.32s
		
		.bounce2
			animation-delay: -0.16s

	@keyframes bouncedelay
		
		0%, 80%, 100%
			transform : scale( 0 )
			opacity   : 0
			
		40% 
			transform : scale( 1 )
			opacity   : 1