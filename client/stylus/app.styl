@import url('https://fonts.googleapis.com/css?family=Oswald:400,300,700')
@import 'nib'

global-reset()
	
body
	-webkit-tap-highlight-color: rgba( 0,0,0,0 )
	-webkit-font-smoothing     : antialiased
	background-color           : #111
	font-family                : 'Oswald', sans-serif
	font-size                  : 14px
	color                      : #111
	
	*
		-webkit-font-smoothing : antialiased
		-moz-osx-font-smoothing: grayscale

li
	list-style: none

a
	text-decoration: none
	color          : #111
	
.wrapper
	absolute: top left
	width   : 100%
	height  : 100%
	z-index : -1
	overflow: hidden
	
.background
	width     : 100%
	height    : 100%
	background: linear-gradient( top, #e08442, #972c12 )

.page
.container
	absolute: top left
	width   : 100%
	height  : 100%
	overflow: hidden
		