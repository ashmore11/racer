@import 'nib'

#home
	absolute  : top left
	width     : 100%
	height    : 100%
	text-align: center
		
	.user
		.name
			display         : block
			padding         : 15px
			text-transform  : uppercase
			color           : white
			margin-bottom   : 10px
			font-size       : 20px
			
		img
			border-radius: 999px
			width        : 33.3%
			
	.users
		margin-top: 20px
		margin-bottom: 10px
		
	form.nickname
		width    : 80%
		absolute : top 50% left 50%
		transform: translate(-50%, -50%)
		
		h1
			font-size     : 30px
			margin-bottom : 20px
			text-transform: uppercase
		
		span
			display    : block
			line-height: 22px
		
		.enter-name
			margin-bottom: 10px
			
		.name-criteria
			span
				margin-bottom: 10px
			
		
		input
			display         : block
			margin          : 40px auto 50px
			height          : 60px
			width           : 80%
			outline         : none
			background-color: rgba(0,0,0,0.3)
			color           : white
			font-size       : 28px
			letter-spacing  : 1px
			text-align      : center
			text-transform  : uppercase
			font-family     : 'Oswald', sans-serif
			border          : 2px solid #111
			box-shadow      : inset 0px 0px 10px 0px rgba(0,0,0,0.6)
			text-shadow     : 0px 0px 10px rgba(0,0,0,0.5)
			
		button
			width         : 60%
			height        : 50px
			border        : 2px solid greenyellow
			border-radius : 10px
			background    : linear-gradient( top, #333, #111 )
			color         : white
			font-family   : 'Oswald', sans-serif
			font-size     : 18px
			box-shadow    : 0px 0px 20px 0px rgba(0,0,0,0.6)
			letter-spacing: 2px
			transition    : opacity 0.5s ease-out
			
			&.disabled
				opacity: 0.3
	
	.alert-box
		width           : 65%
		padding         : 30px 20px
		background-color: rgba(0,0,0,0.9)
		absolute        : top 45% left 50%
		transform       : translate(-50%, -50%)
		box-shadow      : 0px 0px 20px 0px rgba(0,0,0,0.5)
		border          : 2px solid orangered
		color           : white
		line-height     : 28px
		text-transform  : uppercase
		visibility      : hidden
		opacity         : 0
		
			
			
	.race
	.login
		absolute        : bottom left
		width           : 98%
		padding         : 40px 0
		color           : white
		font-size       : 20px
		background      : linear-gradient( top, #111, #222, #111 )
		margin          : 1%
		
	.login
		background: linear-gradient( top, #355088, #3B5998, #355088 )