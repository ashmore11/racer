@import 'nib'

#home
	absolute  : top left
	width     : 100%
	height    : 100%
	text-align: center
		
	.user
		
		.name
			display         : block
			padding         : 15px
			text-transform  : uppercase
			color           : white
			font-size       : 20px
			
		.information
			height          : 140px
			margin          : 0 0 20px 0
			display         : flex
			flex-flow       : row wrap
			justify-content : center
			align-items     : center
			background-color: rgba(0,0,0,0.6)
			border-bottom   : 1px solid #111

			.points
			.rank
			.picture
				padding         : 20px 0
				width           : 33.33%
				float           : left
				color           : greenyellow
				
				img
					width        : 80%
					border-radius: 999px
					box-shadow   : 0px 0px 5px 0px rgba(0,0,0,0.5)
				
				span
					display    : block
					font-size  : 40px
					font-weight: bold
					margin-top : 10px
					color      : white
					text-shadow: 0 0 7px rgba(0,0,0,0.8)
			
		h2.your-races
			margin-bottom: 10px
		
		ul.users-races
			
			li.users-race
				width         : 20%
				border        : 1px solid greenyellow
				border-radius : 5px
				background    : linear-gradient( top, #333, #111 )
				color         : white
				font-family   : 'Oswald', sans-serif
				font-size     : 18px
				box-shadow    : 0px 0px 5px 0px rgba(0,0,0,0.5)
				letter-spacing: 2px
				margin        : 5px
				display       : inline-block
				
				&:active
					box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.5)
				
				a
					display  : block
					color    : white
					padding  : 10px
					font-size: 14px
		
	form.username
		width    : 80%
		absolute : top 50% left 50%
		transform: translate(-50%, -50%)
		
		h1
			font-size     : 30px
			margin-bottom : 20px
			text-transform: uppercase
		
		span
			display    : block
			line-height: 22px
		
		.enter-name
			margin-bottom: 10px
			
		.name-criteria
			span
				margin-bottom: 10px
			
		input
			display         : block
			margin          : 40px auto 50px
			height          : 60px
			width           : 80%
			outline         : none
			background-color: rgba( 0,0,0,0.3 )
			color           : white
			font-size       : 28px
			letter-spacing  : 1px
			text-align      : center
			text-transform  : uppercase
			font-family     : 'Oswald', sans-serif
			border          : 2px solid #111
			box-shadow      : inset 0px 0px 10px 0px rgba( 0,0,0,0.6 )
			text-shadow     : 0px 0px 10px rgba( 0,0,0,0.5 )
			
		button
			width         : 60%
			height        : 50px
			border        : 2px solid greenyellow
			border-radius : 10px
			background    : linear-gradient( top, #333, #111 )
			color         : white
			font-family   : 'Oswald', sans-serif
			font-size     : 18px
			box-shadow    : 0px 0px 20px 0px rgba( 0,0,0,0.6 )
			letter-spacing: 2px
			transition    : opacity 0.5s ease-out
			
			&.disabled
				opacity: 0.3
	
	.alert-box
		width           : 65%
		padding         : 30px 20px
		background-color: rgba( 0,0,0,0.9 )
		absolute        : top 45% left 50%
		transform       : translate( -50%, -50% )
		box-shadow      : 0px 0px 20px 0px rgba( 0,0,0,0.5 )
		border          : 2px solid orangered
		color           : white
		line-height     : 28px
		text-transform  : uppercase
		visibility      : hidden
		opacity         : 0
			
	.bottom-buttons
		absolute: bottom
		width   : 98%
		margin  : 0 1% 5px 1%
		
		.race-btn
		.leaderboard-btn
		.share-btn
			padding   : 20px 0
			color     : white
			box-shadow: 0px 0px 5px 0px rgba( 0,0,0,0.5 )
			float     : left
			
		.share-btn
			// padding   : 12px 0
			width     : 100%
			// font-size : 24px
			background: linear-gradient( top, #3b5998, #23355b )
			
			&:active
				box-shadow: inset 0px 0px 10px 0px rgba( 0,0,0,0.5 )
			
		.race-btn
		.leaderboard-btn
			width        : 49.5%
			margin-bottom: 5px
			background   : linear-gradient( top, #333, #111 )
			
			&:active
				box-shadow: inset 0px 0px 10px 0px rgba( 0,0,0,0.5 )
			
		.leaderboard-btn
			float: right
			
	.login-btn
		absolute  : bottom left
		width     : 98%
		padding   : 20px 0
		color     : white
		background: linear-gradient( top, #3b5998, #23355b )
		box-shadow: 0px 0px 5px 0px rgba( 0,0,0,0.5 )
		margin    : 1%
		
		&:active
			box-shadow: inset 0px 0px 10px 0px rgba( 0,0,0,0.5 )