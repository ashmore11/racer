@import 'nib'

#home
	absolute  : top left
	width     : 100%
	height    : 100%
	text-align: center
		
	.user
		.name
			display         : block
			padding         : 15px
			text-transform  : uppercase
			color           : white
			margin-bottom   : 10px
			font-size       : 20px
			
		img
			border-radius: 999px
			width        : 33.3%
			
	.users
		margin-top: 20px
		margin-bottom: 100px
		
	.nickname
		margin: 10px 0
		
		.enter-name
			margin-bottom: 10px
		
		input
			height          : 60px
			width           : 98%
			margin          : 0 0.5% 10px
			border          : none
			outline         : none
			background-color: rgba(0,0,0,0.5)
			color           : white
			font-size       : 28px
			letter-spacing  : 1px
			text-align      : center
			text-transform  : uppercase
			font-family     : 'Oswald', sans-serif
			
	.race
	.login
		absolute        : bottom left
		width           : 98%
		padding         : 40px 0
		color           : white
		font-size       : 20px
		background      : linear-gradient( top, #111, #222, #111 )
		margin          : 1%
		
	.login
		background: linear-gradient( top, #355088, #3B5998, #355088 )