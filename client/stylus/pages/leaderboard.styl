@import 'nib'

#leaderboard
	
	h1
		padding         : 15px
		text-transform  : uppercase
		color           : white
		font-size       : 20px
		text-align      : center
		
	.info
		position        : relative
		border-bottom   : 1px solid #111
		background      : linear-gradient( top, #333, rgba(0,0,0,0.9) )
		font-size       : 0
		text-align      : center
		
		span
			font-size     : 12px
			display       : inline-block
			width         : ( 100% / 3 )
			padding       : 10px 0
			letter-spacing: 1px
			color         : greenyellow
			
		.splitter
			absolute        : top
			width           : 1px
			height          : 100%
			background-color: #111
			
			&.first
				left: 33.3%
				
			&.last
				left: 66.6%
				
		
	ul.users
		overflow: scroll
		-webkit-overflow-scrolling: touch
		
		li.user
			position     : relative
			padding      : 12px 0
			border-bottom: 1px solid rgba(0,0,0,0.1)
			
			&:nth-child(odd)
				background-color: rgba(0,0,0,0.3)
			
			&:nth-child(even)
				background-color: rgba(0,0,0,0.15)
			
			span
				text-transform: uppercase
				
			.profile
			.points
			.rank
				display       : inline-block
				width         : ( 100% / 3.055 )
				text-align    : center
				vertical-align: middle
				
			.points
			.rank
				font-weight   : bold
				font-size     : 24px
				color         : white
				text-shadow   : 0 0 7px rgba(0,0,0,0.8)
				letter-spacing: 1px