@import 'nib'

#race_user
	absolute  : top left
	width     : 100%
	height    : 100%
	text-align: center
		
	.user
		absolute: top left
		width   : 100%
		z-index : 2
		
		.name
		.distance
			display         : block
			background-color: #111
			padding         : 15px
			color           : white
			font-size       : 20px
			
		.name
			text-transform: uppercase
			
		.distance
			font-size     : 14px
			color         : greenyellow
			letter-spacing: 2px
			background    : linear-gradient( top, rgba(0,0,0,0.5), rgba(0,0,0,0.6), rgba(0,0,0,0.5) )
			border-top    : 1px solid greenyellow
			
	.map-container
		absolute: top left
		width   : 100%
		height  : 100%
		z-index : 1

