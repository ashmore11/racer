@import 'nib'

#race
	
	h1
		display         : block
		background-color: #111
		padding         : 15px
		text-transform  : uppercase
		color           : white
		font-size       : 20px
		text-align      : center
		letter-spacing  : 4px
		
	.no-users
		absolute  : top 50% left 50%
		transform : translate(-50%, -70%)
		width     : 70%
		background: linear-gradient( top, rgba(0,0,0,0.9), rgba(0,0,0,0.8), rgba(0,0,0,0.9) )
		box-shadow: 0px 0px 4px 1px rgba(0,0,0,0.6)

		h2
			text-align: center
			color     : white
			padding   : 30px 0
			
			span
				display: block
				margin : 10px 0
		
	.stats
		position     : relative
		border-bottom: 4px solid #111
		font-size    : 0
		text-align   : center
		
		.speed
		.accuracy
			font-size: 12px
			display  : inline-block
			width    : 50%
			padding  : 10px 0
			
		.splitter
			absolute        : top left 50%
			width           : 4px
			height          : 100%
			background-color: #111
		
	ul.users
		
		li.user
			position     : relative
			padding      : 8px 0
			border-bottom: 1px solid rgba(0,0,0,0.1)
			background   : linear-gradient( top, rgba(0,0,0,0.2), rgba(0,0,0,0.1), rgba(0,0,0,0.2) )
			
			a
				display: block
			
			img
				width         : 30px
				border-radius : 999px
				vertical-align: middle
				margin-right  : 5px
			
			span
				text-transform: uppercase
				vertical-align: middle
				
			.profile
				display    : inline-block
				margin-left: 20px
				
			.distance
				display     : inline-block
				float       : right
				margin-top  : 7px
				margin-right: 40px
				
			.arrow
				absolute : top 50% right 20px
				transform: translateY(-50%)
				
				.line
					width           : 2px
					height          : 10px
					background-color: #111
					
					&:nth-child(1)
						transform: rotate(-45deg) translateY(3px)
						
					&:nth-child(2)
						transform: rotate(45deg) translateY(-3px)
						
	.map-user
		absolute: top 50px left
		width   : 100%
		z-index : 2
		text-align: center
		
		.distance
			display  : block
			padding  : 15px
			color    : white
			font-size: 20px
			
		.name
			text-transform: uppercase
			
		.distance
			font-size     : 14px
			color         : greenyellow
			letter-spacing: 2px
			background    : linear-gradient( top, rgba(0,0,0,0.5), rgba(0,0,0,0.6), rgba(0,0,0,0.5) )
			border-top    : 1px solid greenyellow
	
	.map-container
		absolute  : top left
		width     : 100%
		height    : 100%
		box-shadow: -2px 0 20px rgba(0,0,0,0.5)
		z-index   : 1
		transform : translate3d(101%, 0, 0)
		transition: transform 1s cubic-bezier( 0.23, 1, 0.32, 1 )
		
		.map-canvas
			margin-top: 50px
		
		&.active
			transform : translate3d(0, 0, 0)
	
	.join-race-btn
		absolute  : bottom left
		width     : 98%
		padding   : 40px 0
		color     : white
		font-size : 20px
		background: linear-gradient( top, #111, #222, #111 )
		margin    : 1%
		text-align: center