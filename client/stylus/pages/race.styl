@import 'nib'

#race
	
	h1
		display         : block
		background-color: #111
		padding         : 15px
		text-transform  : uppercase
		color           : white
		font-size       : 20px
		text-align      : center
		letter-spacing  : 4px
		
	.stats
		position     : relative
		border-bottom: 4px solid #111
		font-size    : 0
		text-align   : center
		
		.speed
		.accuracy
			font-size: 12px
			display  : inline-block
			width    : 50%
			padding  : 10px 0
			
		.splitter
			absolute        : top left 50%
			width           : 4px
			height          : 100%
			background-color: #111
		
	ul.users
		
		li.user
			position     : relative
			padding      : 8px 0
			border-bottom: 1px solid rgba(0,0,0,0.1)
			background   : linear-gradient( top, rgba(0,0,0,0.2), rgba(0,0,0,0.1), rgba(0,0,0,0.2) )
			
			a
				display: block
			
			img
				width         : 30px
				border-radius : 999px
				vertical-align: middle
				margin-right  : 5px
			
			span
				text-transform: uppercase
				vertical-align: middle
				
			.profile
				display    : inline-block
				margin-left: 20px
				
			.distance
				display     : inline-block
				float       : right
				margin-top  : 7px
				margin-right: 40px
				
			.arrow
				absolute : top 50% right 20px
				transform: translateY(-50%)
				
				.line
					width           : 2px
					height          : 10px
					background-color: #111
					
					&:nth-child(1)
						transform: rotate(-45deg) translateY(3px)
						
					&:nth-child(2)
						transform: rotate(45deg) translateY(-3px)
	
	.map-container
		width   : 1px
		height  : 1px
		display : none
	
	.join-race-btn
		absolute  : bottom left
		width     : 98%
		padding   : 40px 0
		color     : white
		font-size : 20px
		background: linear-gradient( top, #111, #222, #111 )
		margin    : 1%
		text-align: center