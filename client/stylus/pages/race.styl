@import 'nib'

#race
	
	h1
		display         : block
		background-color: #111
		padding         : 15px
		text-transform  : uppercase
		color           : white
		font-size       : 20px
		text-align      : center
		
	.stats
		position     : relative
		border-bottom: 4px solid #111
		font-size    : 12px
		text-align   : center
		
		.speed
		.accuracy
			display: inline-block
			width  : 49%
			padding: 10px 0
			
		.splitter
			absolute        : top left 50%
			width           : 4px
			height          : 100%
			background-color: #111
		
	ul.users
		
		li.user
			position     : relative
			padding      : 10px 0
			border-bottom: 1px solid #111
			background   : linear-gradient( top, rgba(0,0,0,0.25), rgba(0,0,0,0.1), rgba(0,0,0,0.25) )
			
			img
				width         : 30px
				border-radius : 999px
				vertical-align: middle
				margin-right  : 5px
			
			span
				text-transform: uppercase
				
			.profile
				display    : inline-block
				margin-left: 20px
				
			.distance
				display     : inline-block
				float       : right
				margin-top  : 6px
				margin-right: 40px
				
			.arrow
				absolute : top 50% right 20px
				transform: translateY(-50%)
				
				.line
					width           : 2px
					height          : 10px
					background-color: #111
					
					&:nth-child(1)
						transform: rotate(-45deg) translateY(3px)
						
					&:nth-child(2)
						transform: rotate(45deg) translateY(-3px)
	
	.map
		absolute: bottom 110px left 1%
		width   : 98%
		height  : 140px
		overflow: hidden
		
		&.loaded
			#map_canvas
				transform: translateY(0)

		#map_canvas
			width     : 100%
			height    : 100%
			transform : translateY(100%)
			transition: transform 0.75s ease-in-out
	
	.join-race-btn
		absolute  : bottom left
		width     : 98%
		padding   : 40px 0
		color     : white
		font-size : 20px
		background: linear-gradient( top, #111, #222, #111 )
		margin    : 1%
		text-align: center