template(name="layout")

	.wrapper
		.background

	if currentUser

		+header

	.container

		+yield

template( name="header" )

	if hasUsername

		.top-bar

			unless routeIsHome

				.back
					.arrow
						.line
						.line

			.nav_cta( class="#{active}" )
				.line
				.line
				.line

		header#nav( class="#{active}" )

			ul
				li.link: a( href="{{ pathFor 'home' }}" ) HOME
				li.link: a( href="{{ pathFor 'races' }}" ) UPCOMING RACES
				li.link: a( href="{{ pathFor 'leaderboard' }}" ) LEADERBOARDS
				li.link: .logout LOGOUT