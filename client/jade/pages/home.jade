template( name="home" )

	#home.page

		.background

		if currentUser

			.user
				
				.name
					span {{ currentUser.profile.name }}
				
				.profile-picture
					img( src="{{ currentUser.profile.image }}" )


			.race
				span FIND RACE
		
		else

			+login

			#stats
				.accuracy
				.heading
				.lat
				.lon
				.speed
				.index

template( name="login" )

	.login
		span LOGIN WITH FACEBOOK