template( name="race" )

	#race.page

		h1 {{ _id }}

		if user_in_race

			.stats
				.accuracy ACCURACY: {{ accuracy }} METERS
				.splitter
				.speed SPEED: {{ speed }} KPH

		
		ul.users

			each competitors

				li.user

					.profile
						img( src="{{ profile.image }}" )
						span.name {{ profile.name }}

					.distance {{ profile.distance }} km

					.arrow
						.line
						.line


		if user_in_race

			.map: #map_canvas

			.join-race-btn LEAVE RACE

		else

			.join-race-btn JOIN RACE