template( name="race" )

	#race.page

		h1 {{ title }}:00

		if userInRace

			.stats
				.accuracy ACCURACY: {{ accuracy }} METERS
				.splitter
				.speed SPEED: {{ speed }} KPH


		if noUsers

			.no-users
				h2
					span THIS RACE HAS NO USERS YET
					span BE THE FIRST!

		
		ul.users

			each competitors

				li.user

					if isUser

						a( href="{{ userUrl }}" )

							.profile
								img( src="{{ profile.image }}" )
								span.name {{ profile.nickname }}

							if raceLive

								.distance {{ profile.distance }} km

								.arrow
									.line
									.line

					else

						.profile
							img( src="{{ profile.image }}" )
							span.name {{ profile.nickname }}

						if raceLive

							.distance {{ profile.distance }} km


		if userInRace

			.map-container( class="{{ mapReady }}" )
				+googleMap( name="userMap" options=mapOptions )

			.join-race-btn LEAVE RACE

		else

			.join-race-btn JOIN RACE